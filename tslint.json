{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "member-access": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "quotemark": [true, "single", "avoid-escape"],
    "ordered-imports": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
