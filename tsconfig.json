{
  "files": ["src/index.tsx"],
  "include": ["src/**/*.tsx"],
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/@types/*", "./server/types/*"]
    },
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "pretty": true
  }
}
